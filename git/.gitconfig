[init]
	defaultBranch = main

# git-delta configurations

[include]
  path = ~/.config/delta/themes.gitconfig

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    #features from ~/.config/delta/themes.gitconfig
  features = calochortus-lyallii
  true-color = always

[delta "interactive"]
    keep-plus-minus-markers = false




[column]
	ui = auto
[branch]
	sort = -committerdate
